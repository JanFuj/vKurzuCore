@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <header class="header header--index header--down header--up-top" id="site-header">
        <nav class="nav" role="navigation">
            <a class="site-branding" href="@Url.Action("Index", "Admin")">
                <partial name="~/Views/Shared/_logoView.cshtml" />
                <h1 class="h6 site-name link--gradient-inversed">
                    <span class="site-tag">Admin</span>
                </h1>
            </a>
            <ul class="nav__list">
                <li class="nav__item">
                    <a class="nav__link link--gradient link--border - hover" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
                </li>
                <li class="nav__item">
                    <form id="logoutForm" class="navbar-right" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <a class="nav__link link--gradient link--border-hover" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                    </form>
                </li>
            </ul>
        </nav>
    </header>
}

