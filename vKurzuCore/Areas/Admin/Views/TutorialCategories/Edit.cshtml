@model vKurzuCore.ViewModels.Dto.TutorialCategoryDto
@{
    ViewBag.Title = "Upravit kategorii";
}

<partial name="_adminLoginPartial" />
<main class="main">
    <h1>Upravit kategorii</h1>
    <form class="admin-form" asp-action="Edit" method="post" id="mySubmitForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="@Model.Id" />
        <p class="form-item">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </p>
        <p class="form-item">
            <label asp-for="@Model.Description"></label>
            <input asp-for="@Model.Description" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </p>
        <p class="form-item">
            <label asp-for="@Model.UrlTitle"></label>
            <input asp-for="@Model.UrlTitle" />
            <span asp-validation-for="@Model.UrlTitle" class="text-danger"></span>
        </p>
        <p class="form-item">
            <label asp-for="@Model.HeaderImage"></label>
            <input asp-for="@Model.HeaderImage" id="HeaderImage" />
        </p>
        <p class="form-item">
            <img id="HeaderImagePlaceHolder" src="@Model.HeaderImage" />
        </p>
        <p class="form-item">
            <label asp-for="@Model.SocialSharingImage"></label>
            <input asp-for="@Model.SocialSharingImage" id="SocialThumbnailImage" />
        </p>
        <p class="form-item">
            <img id="SocialThumbnailImagePlaceHolder" src="@Model.SocialSharingImage" />
        </p>
        <br />
        <button type="submit" id="save">Uložit</button>
    </form>
</main>





