@model vKurzuCore.ViewModels.Dto.TutorialPostDto
@{
    ViewBag.Title = "Smazat post";
}
<partial name="_adminLoginPartial" />
<main style="justify-items: center; align-content: center; margin: 0; min-height: 100vh; text-align: center; grid-gap: var(--base);">
    <h1 class="" style="margin-bottom: 0;">Smazat post v kategorii @Model.Category.Name?</h1>
    <h2 class="h4" style="color: var(--text-secondary); margin-top: 0;">@Model.Name</h2>
    <form class="admin-form" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="button">Nenávratně smazat</button>
    </form>
    <a class="link--gradient link--border" asp-action="Index" asp-route-categoryId="@Model.Category.Id">Ponechat</a>
</main>